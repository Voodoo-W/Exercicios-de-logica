algoritmo "EXERCICO_08"
var

   A, C, RAIO  : REAL
   // PI 3.1415
   
inicio

      escreva (" Volaro do raio?: ")
      leia (RAIO)
      
      A <- 3.1415 * RAIO ^ 2
      C <- 2 * 3.1415 * RAIO
      
      // saida de dados
      escreval ("AREA = ", A)
      ESCREVAL ("COMPRIMENTO = " , C)
      
fimalgoritmo